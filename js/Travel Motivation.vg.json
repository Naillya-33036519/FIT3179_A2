{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "hconcat": [
    {
      "width": 300,
      "height": 250,
      "data": {
        "values": [
          {"Category": "Official Business", "Value": 1.2},
          {"Category": "Attending Events", "Value": 5.4},
          {"Category": "Medical/Wellness", "Value": 10.3},
          {"Category": "Leisure", "Value": 22.1},
          {"Category": "Shopping", "Value": 36.4},
          {"Category": "Visiting Friends & Family", "Value": 24.2}
        ]
      },
      "encoding": {
        "color": {
          "field": "Category",
          "type": "nominal",
          "scale": {
            "domain": [
              "Official Business",
              "Attending Events",
              "Medical/Wellness",
              "Leisure",
              "Shopping",
              "Visiting Friends & Family"
            ]
          },
          "legend": {
            "title": "Purpose of Visit",
            "titleFontSize": 14,
            "labelFontSize": 14,
            "orient": "bottom",
            "offset": 0
          }
        },
        "theta": {
          "field": "Value",
          "type": "quantitative"
        },
        "tooltip": [
          {
            "field": "Category",
            "title": "Purpose of Visit"
          },
          {
            "field": "Value",
            "title": "Percentage",
            "format": ".1f"
          }
        ]
      },
      "mark": {
        "type": "arc",
        "innerRadius": 60,
        "outerRadius": 85
      },
      "config": {
        "view": {
          "stroke": null
        }
      }
    },
    {
      "width": 500,
      "height": 300,
      "title": "Stay Duration for Each Year",
      "data": {
        "values": [
          {"year": 2018, "days": 2.40},
          {"year": 2019, "days": 2.50},
          {"year": 2020, "days": 1.90},
          {"year": 2021, "days": 2.20},
          {"year": 2022, "days": 2.50},
          {"year": 2023, "days": 2.45}
        ]
      },
      "layer": [
        {
          "mark": {
            "type": "bar",
            "tooltip": true,
            "width": 2
          },
          "encoding": {
            "x": {
              "field": "year",
              "type": "ordinal",
              "title": "Year"
            },
            "y": {
              "field": "days",
              "type": "quantitative",
              "title": "Stay Duration (Days)",
              "scale": {
                "domain": [1, 3]
              }
            }
          }
        },
        {
          "mark": {
            "type": "circle",
            "size": 100,
            "strokeWidth": 2
          },
          "encoding": {
            "x": {
              "field": "year",
              "type": "ordinal"
            },
            "y": {
              "field": "days",
              "type": "quantitative"
            },
            "tooltip": [
              {"field": "year", "title": "Year"},
              {"field": "days", "title": "Stay Duration (Days)", "format": ".2f"}
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "center",
            "baseline": "middle",
            "dy": -10,
            "fontSize": 12,
            "fontStyle": "italic"
          },
          "encoding": {
            "text": {
              "field": "days",
              "type": "quantitative",
              "format": ".2f"
            },
            "x": {
              "field": "year",
              "type": "ordinal"
            },
            "y": {
              "field": "days",
              "type": "quantitative"
            }
          }
        }
      ]
    }
  ]
}
